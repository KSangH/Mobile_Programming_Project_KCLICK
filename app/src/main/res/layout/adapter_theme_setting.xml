<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_layout_margin">

    <TextView
        android:id="@+id/adapter_theme_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="색상 1"
        android:textStyle="bold"
        android:textSize="@dimen/default_text_size_large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/adapter_theme_imageview"/>

    <ImageView
        android:id="@+id/adapter_theme_imageview"
        android:layout_gravity="center"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/adapter_theme_textview"/>


</androidx.constraintlayout.widget.ConstraintLayout>
