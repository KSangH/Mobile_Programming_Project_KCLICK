<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="학기 설정"
        android:textSize="25dp"
        android:layout_marginBottom="@dimen/default_layout_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_layout_margin_small"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/dialog_semester_edittext_year"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:hint="해당년도"
            android:text="2020"
            android:textSize="@dimen/default_text_size_large"
            android:inputType="number"
            android:maxLength="4"
            android:background="@drawable/square_white_bg"
            android:backgroundTint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="년"
            android:textSize="@dimen/default_text_size_large"
            android:layout_marginStart="@dimen/default_layout_margin" />


        <EditText
            android:id="@+id/dialog_semester_edittext_semester"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:hint="학기"
            android:text="2"
            android:textSize="@dimen/default_text_size_large"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/square_white_bg"
            android:backgroundTint="@android:color/white"
            android:layout_marginStart="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="학기"
            android:textSize="@dimen/default_text_size_large"
            android:layout_marginStart="@dimen/default_layout_margin" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_semester_textview_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/default_layout_margin_small"
        android:visibility="gone"
        android:textColor="#ff0000"
        android:text="잘못 입력하셨습니다."
        android:textSize="@dimen/default_text_size" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_layout_margin_small"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_semester_button_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="확인"
            android:backgroundTint="@android:color/white"
            android:layout_weight="1" />

        <Button
            android:id="@+id/dialog_semester_button_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="취소"
            android:backgroundTint="@android:color/white"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>